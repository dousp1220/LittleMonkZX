/* components/ForemanItem/ForemanItem.wxss */
.foremanItemView {
  margin: 3px 5px;
  border: 1px solid #999;
}
.mainView {
  display: flex;
  flex-direction: column;
  justify-content:flex-start;
}

.topView {
  display: flex;
  flex-direction: row;
  justify-content:space-between;
}
.detailTop {
  display: flex;
  flex-direction: row;
}

.headImageView {
  width: 60px;
}
.headImage {
  height: 60px;
  width: 60px;
  border-radius: 30px;
}
.nameView {
  /* width: 80%; */
  margin-left: 5px; 
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content:space-around;
}

.scoreView {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
}

.msgView {
  padding: 0px 10px;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.specialty{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}
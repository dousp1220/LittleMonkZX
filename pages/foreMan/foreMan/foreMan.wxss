/* pages/foreman/foreMan.wxss */
.splitLine {
  margin-top: 10rpx;
  height: 2px;
  background-color: #999;
  margin: 13rpx 3rpx;
}
.top-view {
  display: -webkit-flex;
  flex-flow: row;
  justify-content: space-between;
  align-items:center;
}
.seach-view {
  width: 75%;
  margin-right:5px;
}
.searchcion {  
  margin: 10rpx 10rpx 10rpx 10rpx;   
  width: 20px;  
  height: 20px;
} 
.searchInput {
  height: 50rpx;
  border: 1px solid #aaa;
  border-radius: 10rpx;
  display: -webkit-flex;
  flex-flow: row;
  justify-content: flex-end;
   align-items:center; 
}
.citySwitchBtn {
  height: 58rpx;
  width: 20%;
  border: none;
}


.citypickers{
  position: fixed;
  height: 100%;
  width: 100%;
  min-height: 100%;
  background-color: #ff0;
}


.citybody {
  position: fixed;
  bottom: 0px;
}

.cityheader {
  position: absolute;
  top:0px;
  width: 100%;
  z-index: 5;
}

.city-cancel {
  float: left;
  margin: 20rpx;
  color: #828282;
}

.city-true {
  float: right;
  margin: 20rpx;
  color: #00FF00;
}
.closeCitySwitchImage {
  width: 20px;
  height: 20px;
}

.section .picker {
  background-color: #fff;
  border-bottom: 2px #cccccc solid;
  border-top: 2px #d9d9d9 solid;
  padding: 20rpx;
}

.cityPickerItem {
  line-height: 50px;
  padding-left:10px;
  text-align: center;
  background-color: #ddd;
}
/* pages/foreman/foreMan.wxss */
.splitLine {
  margin-top: 10rpx;
  height: 2px;
  background-color: #999;
  margin: 13rpx 3rpx;
}
.foreManMsg {
  padding: 0px 5px;
  display: -webkit-flex;
  flex-flow: column;
  justify-content: flex-start;
}
.topView {
  display: -webkit-flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.bottomView {
  display: -webkit-flex;
  flex-direction: row;
  justify-content: flex-start;
}

.headImageView {
  width: 80px;
}
.headImage {
  height: 60px;
  width: 60px;
  border-radius: 30px;
}

.msgDetailView {
  display: -webkit-flex;
  flex-flow: column;
  justify-content: space-around;
  align-items:flex-start; 
}

.msgDetailTop {
  display: flex;
  flex-flow: row;
  justify-content: flex-start;
}
.msgDetailBottom {
  display: flex;
  flex-flow: row;
  justify-content: flex-start;
}

.exampleView {
  display: flex;
  white-space: nowrap;
  width: 100%;
}

.navigator-arrow{
  display: flex;
  justify-content: space-between;
  margin-bottom:15rpx;
}

.qualityView {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.scoreTags {
  margin-top: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.bottomBtnView {
  width: 100%;
  position: fixed;
  /* right: 5px; */
  bottom: 0px;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: space-around;
}

.bottomBtnView1 {
  width: 100%;
  height: 50px;
}

.bottom-btn {
  width: 50%;
  border: none;
  border-radius: 0;
}